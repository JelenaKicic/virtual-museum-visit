      "methods": ["POST"],
      "pattern": "/museums",
      "roles": [
        "ADMIN"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/museums",
      "roles": [
        "ADMIN", "USER"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/museums/**",
      "roles": [
        "ADMIN", "USER"
      ]
