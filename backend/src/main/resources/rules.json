      "methods": ["POST"],
      "pattern": "/tours/**/museums/**",
      "roles": [
        "ADMIN"
      ]
    },
    {
      "methods": ["POST"],
      "pattern": "/tours/**/upload-files",
      "roles": [
        "ADMIN"
      ]
    },
