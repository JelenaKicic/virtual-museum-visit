      "pattern": "/users/**/status/**",
      "roles": ["ADMIN"]
    },
    {
      "methods": ["PUT"],
      "pattern": "/users/**/reset-password",
      "roles": ["ADMIN"]
    },
    {
      "methods": ["GET"],
      "pattern": "/users/count/**",
      "roles": [
        "ADMIN"
      ]
    },
