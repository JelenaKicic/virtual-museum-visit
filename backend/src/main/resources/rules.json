      "methods": ["GET"],
      "pattern": "/tours/**",
      "roles": [
        "ADMIN", "USER"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/tours/**/museums/**",
      "roles": [
        "ADMIN", "USER"
      ]
    },
    {
      "methods": ["POST"],
      "pattern": "/tours/**/buy",
      "roles": [
        "USER"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/tours_active",
      "roles": [
        "USER"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/logs/**",
      "roles": [
        "ADMIN"
      ]
    },
    {
      "methods": ["GET"],
      "pattern": "/logs",
      "roles": [
        "ADMIN"
      ]
    }
